<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FullScreenDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/fullscreen_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_close_24" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/fullscreen_dialog_close"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lblClientFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client_feedback" />

        <EditText
            android:id="@+id/edtSaveAs"
            android:layout_width="match_parent"
            android:layout_height="48dp" />


        <TextView
            android:id="@+id/lblSaveAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client_feedback" />

        <EditText
            android:id="@+id/edtClientFeedback"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Spinner
            android:id="@+id/spnCSAT"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/spnCATSs" />

        <TextView
            android:id="@+id/lblFailureType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/failure_type" />

        <Spinner
            android:id="@+id/spnFailureType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/spnFailureTypes" />

        <TextView
            android:id="@+id/lblAmountDue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_due" />

        <EditText
            android:id="@+id/edtAmountDueFailure"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/lblCategoryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_type" />

        <Spinner
            android:id="@+id/spnCategoryType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/spnCategoryTypes" />

        <TextView
            android:id="@+id/lblAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_due" />

        <EditText
            android:id="@+id/edtAmountDueCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/lblRootCause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/root_cause" />

        <EditText
            android:id="@+id/inputRootCause"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnCloseTicket"
            style="@style/Widget.ColCab.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/button_close" />

    </LinearLayout>
</LinearLayout>
