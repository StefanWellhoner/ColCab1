<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomePageActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogTicket"
                style="@style/Widget.ColCab.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="onLogTicket"
                android:text="@string/btnLogTicket" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenTickets"
                style="@style/Widget.ColCab.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="onOpenTicket"
                android:text="@string/btnOpenTickets" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClosedTickets"
                style="@style/Widget.ColCab.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="onClosedTicket"
                android:text="@string/btnClosedTickets" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/site_logo" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>